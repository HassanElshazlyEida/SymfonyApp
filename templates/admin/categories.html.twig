
{% extends 'admin/base.html.twig'%}

{% block body %}

{% block title %}Categories list{% endblock %}

{% block stylesheets %}
<style>
    .fa-ul>li {
    margin-top: 15px;
}
</style>

{% endblock %}
<h2>Categories list</h2>
{% for message in app.flashes('created') %}
        <div class="alert alert-success">
            {{ message}}
        </div>
{% endfor %}
{% for message in app.flashes('updated') %}
        <div class="alert alert-success">
            {{ message}}
        </div>
{% endfor %}
    <ul class="fa-ul text-left">
        {{categories|raw}}
    </ul>

{{ form_start(form,{'attr':{'method':'POST'}})}}
<form action="#" method="POST">
    <div class="col-md-4 mb-3">
        {{form_widget(form)}}
	    <label for="inlineFormCustomSelect">Parent:</label>
        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name='category[parent]'>
            {{ render(controller('App\\Controller\\AdminController::getAllCategories'))}}
        </select>
        <div class="invalid-feedback">
           {{form_errors(form)}}
        </div>
        <button class="btn btn-primary mt-3" type="submit">Add</button>
    </div>
</form>
{{ form_end(form)}}

{% endblock %}
